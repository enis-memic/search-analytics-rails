<turbo-frame id="posts" class="posts-frame">
  <% @posts.each do |post| %>
    <div class="post-item" id="<%= dom_id(post) %>">
      <p class="post-link">
        <%= link_to post.title, post_path(post), class: 'link', data: { turbo: "false" } %>
      </p>
      <p class="post-body"><%= truncate(post.body, length: 200, separator: '.').to_s + '...' %></p>
    </div>
  <% end %>
</turbo-frame>